<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_scrool_view"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:id="@+id/setting_customised_color"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp">

    <com.simplemobiletools.commons.view.MyTextView
        android:id="@+id/setting_customised_colors_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_center_vertical="true"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="Customised Colors"
        >



</com.simplemobiletools.commons.view.MyTextView>

</RelativeLayout>



    </LinearLayout>

</ScrollView>